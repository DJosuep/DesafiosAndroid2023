<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgArteLista"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_marginLeft="@dimen/logo_lado"
        android:layout_marginTop="@dimen/logo_arriba"
        android:layout_marginRight="@dimen/logo_lado"
        android:layout_marginBottom="0dp"
        android:background="@drawable/logo_artelista" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen1"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/secondary_color"
        android:textStyle="bold" />
</LinearLayout>