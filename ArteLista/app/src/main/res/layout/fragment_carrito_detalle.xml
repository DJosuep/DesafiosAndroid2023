<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carrito.CarritoDetalleFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abCarritoDet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam3">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolcolapse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/secondary_color">
            <ImageView
                android:id="@+id/imgdetallearte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mercadolibre1"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                android:transitionName="@string/transition_galeriadet"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tbGaleriaDet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margen2"
                android:theme="@style/Theme.Overlay"
                app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/margen6">
            <TextView
                android:id="@+id/tvVendedorDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamtexto3"
                android:text="@string/strNombreVendedor"
                android:paddingLeft="@dimen/margen8"
                android:paddingRight="@dimen/margen8"/>
            <TextView
                android:id="@+id/tvCategoriaArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamtexto2"
                android:text="@string/strCategoriaCarrito"
                android:paddingLeft="@dimen/margen8"
                android:paddingRight="@dimen/margen8"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tam2"
                android:background="@color/gris"/>
            <TextView
                android:id="@+id/tvArticuloDet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/tamtexto3"
                android:textStyle="bold"
                android:text="@string/strCategoriaCarrito"
                android:paddingTop="@dimen/margen8"/>
            <TextView
                android:id="@+id/tvDescripcionArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamtexto2"
                android:gravity="center_horizontal"
                android:text="@string/strDescripcionArticulo"
                android:paddingTop="@dimen/tamtexto3"
                android:paddingLeft="@dimen/tamtexto3"
                android:paddingRight="@dimen/tamtexto3"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen1"
        android:src="@drawable/ic_heart_vacio"
        app:layout_anchor="@+id/abCarritoDet"
        android:contentDescription="@string/transition_galeriadet"
        app:layout_anchorGravity="bottom|end"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.coordinatorlayout.widget.CoordinatorLayout>